{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"components/*": ["./src/components/*"],
			"data/*": ["./src/data/*"],
			"helpers/*": ["./src/helpers/*"],
			"pages/*": ["./src/pages/*"],
			"state/*": ["./src/state/*"]
		},
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"allowJs": true,
		"declaration": false,
		"importHelpers": true,
		"jsx": "preserve",
		"lib": ["dom", "es2015", "es2017"],
		"module": "commonjs",
		"noEmitHelpers": false,
		"noImplicitAny": true,
		"noResolve": false,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"target": "esnext"
	},
	"include": ["./src/**/*", "./test/**/*"],
	"exclude": ["node_modules", "public", ".cache"]
}
